<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Profil">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/profilPic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="20dp"
            android:scaleType="centerInside"
            app:srcCompat="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/usernameProfile"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:text="Kullanıcı Adı:"
                android:textSize="16sp"
                android:layout_marginEnd="32dp"/>
            <EditText
                android:id="@+id/userNameETprofil"
                android:layout_width="120dp"
                android:layout_height="48dp"
                android:text="default"
                android:textSize="16sp"
                android:layout_marginEnd="32dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/phoneProfile"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:text="Telefon:"
                android:textSize="16sp"
                android:layout_marginEnd="32dp"/>
            <EditText
                android:id="@+id/phoneETprofil"
                android:layout_width="120dp"
                android:layout_height="48dp"
                android:text="0000"
                android:textSize="16sp"
                android:inputType="phone"
                android:layout_marginEnd="32dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/yearProfile"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:text="Mesafe:"
                android:textSize="16sp"
                android:layout_marginEnd="32dp"/>
            <EditText
                android:id="@+id/distETprofil"
                android:layout_width="120dp"
                android:layout_height="48dp"
                android:text="0000"
                android:textSize="16sp"
                android:inputType="number"
                android:layout_marginEnd="32dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/companyProfile"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:text="Bölüm:"
                android:textSize="16sp"
                android:layout_marginEnd="32dp"/>
            <EditText
                android:id="@+id/departmentETprofil"
                android:layout_width="120dp"
                android:layout_height="48dp"
                android:text="default"
                android:textSize="16sp"
                android:layout_marginEnd="32dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/gradeProfile"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:text="Sınıf:"
                android:textSize="16sp"
                android:layout_marginEnd="32dp"/>
            <EditText
                android:id="@+id/gradeETprofil"
                android:layout_width="120dp"
                android:layout_height="48dp"
                android:text="default"
                android:textSize="16sp"
                android:layout_marginEnd="32dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/stayProfile"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:text="Süre:"
                android:textSize="16sp"
                android:layout_marginEnd="32dp"/>
            <EditText
                android:id="@+id/stayETprofil"
                android:layout_width="120dp"
                android:layout_height="48dp"
                android:text="default"
                android:textSize="16sp"
                android:layout_marginEnd="32dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/statusProfile"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:text="Durum:"
                android:textSize="16sp"
                android:layout_marginEnd="32dp"/>
            <EditText
                android:id="@+id/statusETprofil"
                android:layout_width="120dp"
                android:layout_height="48dp"
                android:text="default"
                android:textSize="16sp"
                android:layout_marginEnd="32dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/saveProfileBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:layout_marginStart="150dp"
            android:layout_marginTop="100dp"
            android:text="Kaydet" />


    </LinearLayout>

</FrameLayout>